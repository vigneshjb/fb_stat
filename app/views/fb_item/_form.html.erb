<%= form_for @fb_item, :html => { :class => "form-horizontal fb_item" } do |f| %>

    <% if @fb_item.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@fb_item.errors.count, "error") %> prohibited this fb_item from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @fb_item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :fb_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :fb_id, :class => 'form-control' %>
    </div>
    <%= error_span(@fb_item[:fb_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :content, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :content, :class => 'form-control' %>
    </div>
    <%= error_span(@fb_item[:content]) %>
  </div>
  <div class="control-group">
    <%= f.label :fb_time, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :fb_time, :class => 'form-control' %>
    </div>
    <%= error_span(@fb_item[:fb_time]) %>
  </div>
  <div class="control-group">
    <%= f.label :user_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :user_id, :class => 'form-control' %>
    </div>
    <%= error_span(@fb_item[:user_id]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            fb_items_path, :class => 'btn btn-default' %>

<% end %>
